# ===========================================
# AD-FORGE SAAS CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values

# -------------------------------------------
# SUPABASE (Main Database + Auth)
# -------------------------------------------
# Create a NEW Supabase project for the SaaS platform
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Main SaaS database URL
SUPABASE_URL=

# Anon key (public, for frontend)
SUPABASE_ANON_KEY=

# Service role key (private, for backend - KEEP SECRET)
SUPABASE_SERVICE_KEY=

# -------------------------------------------
# SUPABASE RAG (TV Ads Database - Separate)
# -------------------------------------------
# This is the existing RAG database for TV adverts
SUPABASE_RAG_URL=
SUPABASE_RAG_KEY=

# -------------------------------------------
# STRIPE (Billing)
# -------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

# Publishable key (public, for frontend)
STRIPE_PUBLISHABLE_KEY=

# Secret key (private, for backend - KEEP SECRET)
STRIPE_SECRET_KEY=

# Webhook signing secret (for verifying webhook events)
STRIPE_WEBHOOK_SECRET=

# Price IDs for subscription tiers
STRIPE_PRICE_FREE=
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# -------------------------------------------
# AI PROVIDERS
# -------------------------------------------
# OpenAI API Key (for embeddings)
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key (for video analysis, script generation)
# Get this from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# -------------------------------------------
# APPLICATION
# -------------------------------------------
# Environment: development | staging | production
ENVIRONMENT=development

# Backend API URL (for frontend to call)
API_URL=http://localhost:8000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# JWT secret for additional token signing (optional)
JWT_SECRET=your-secret-key-here

# -------------------------------------------
# MONITORING (Optional)
# -------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=